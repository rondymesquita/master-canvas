{
  "name": "canvas",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "configure": "npx lerna exec npm install -- --legacy-peer-deps",
    "dev": "npx lerna run dev",
    "build": "npx lerna run build",
    "start": "npm run start:api && npm run start:web && npm run start:proxy",
    "stop": "pm2 stop all",
    "start:proxy": "npx pm2 start --name proxy ./packages/proxy/start.js",
    "start:web": "npx pm2 serve --name web ./packages/web/dist/ 5005",
    "start:api": "npx pm2 start --name api ./packages/api/dist/src/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rondymesquita/master-canvas.git"
  },
  "author": "rondymesquita",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rondymesquita/master-canvas/issues"
  },
  "homepage": "https://github.com/rondymesquita/master-canvas#readme",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "dependencies": {
    "@types/http-proxy": "^1.17.9",
    "http-proxy": "^1.18.1",
    "lerna": "^5.5.2",
    "pm2": "^5.2.0",
    "ts-node": "^10.9.1"
  }
}
